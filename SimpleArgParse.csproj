<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>ArdaOzcan</Authors>
    <PackageId>ArdaOzcan.SimpleArgParse</PackageId>
    <Version>1.0.4</Version>
    <Description>
      This library allows our fellow programmers to easily parse some command line arguments
      without having spend hours reading the documentation. SimpleArgParse is inspired by the 
      python module 'argparse' and was created due to the lack of easy-to-use argument parsers.
    </Description>
    <RepositoryUrl>https://github.com/ArdaOzcan/SimpleArgParse</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>SAPLogo-square.png</PackageIcon>
    <PackageTags>command;line;parse;argparse;argument parser;cli</PackageTags>
  </PropertyGroup>

  <ItemGroup>
      <None Include="res\SAPLogo-square.png" Pack="true" PackagePath="\"/>
  </ItemGroup>


</Project>
